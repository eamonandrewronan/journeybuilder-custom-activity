extends layout

block content
  article.slds-card
    .slds-card__header.slds-grid
      header.slds-media.slds-media_center.slds-has-flexi-truncate
        .slds-media__figure
          span.slds-icon_container.slds-icon-standard-contact(title="calibration")
            svg.slds-icon.slds-icon_small(aria-hidden="true")
              use(xlink:href="/icons/standard-sprite/svg/symbols.svg#calibration")
            span.slds-assistive-text calibration
        .slds-media__body
          h2.slds-card__header-title
            a.slds-card__header-link.slds-truncate(href="javascript:void(0);" title="Card Header")
              span= title
    .slds-card__body.slds-card__body_inner
      form.js-settings-form
        .slds-form-element.slds-m-top_large
          label#OptionsLabel.slds-form-element__label(for="DropdownOptions") Vendor
          .slds-form-element__control
            .slds-select_container
              select#DropdownOptions.slds-select.js-activity-setting(name='dropdownOptions' )
                each dropdownOption in dropdownOptions
                  option(value=dropdownOption.value)= dropdownOption.name
        .slds-form-element#CommunicationsDiv.slds-m-top_large
          label#Communications.Label.slds-form-element__label(for="DropdownCommunications") Communication
          .slds-form-element__control
            .slds-select_container
              select#DropdownCommunications.slds-select.js-activity-setting(name='dropdownCommunications' )
                each dropdownCommunication in dropdownCommunications
                  option(value=dropdownCommunication.value)= dropdownCommunication.name
        .slds-form-element#MethodDiv.slds-m-top_large.slds-box
          label#MethodLabel.Label.slds-form-element__label(for="SwitchMethod") Method
          .slds-form-element__control.slds-m-top_medium
            Div
              label#FTP.slds-radio__label(for="FTPMethod") FTP
              input#FTPMethod.js-activity-setting.slds-p-around_xx-large.slds-m-left_large(type='radio', name='Method' checked)
            Div
              label#API.slds-radio__label(for="APIMethod") API
              input#APIMethod.js-activity-setting.slds-p-around_xx-large.slds-m-left_large(type='radio', name='Method' disabled)
        .slds-form-element#TextDiv.slds-m-top_large.slds-box
          label#Code.Label.slds-form-element__label(for="TrackingCode") Tracking Code
          .slds-form-element__control
            input#TrackingCode.js-activity-setting(type="text" name="TrackingCode" id="TrackingCode")
          label#Code.Label.slds-form-element__label(for="Other") Other Information
          .slds-form-element__control
            textarea(name="Other", cols="30", rows="10") 
        .slds-form-element#PreviewDiv.slds-m-top_large.slds-box
          label#MethodLabel.Label.slds-form-element__label(for="Preview") Preview
          .slds-form-element__control.slds-m-top_medium
              img#PreviewImage.slds-align_absolute-center(src='images/icon.png')

    footer.slds-card__footer
